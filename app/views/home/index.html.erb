<script>
      var scroll_position = 0;
      var section_position = 700;
      var flowchart = document.getElementById("flowchart-path");
      var login = document.getElementById("Login")
      var apply = document.getElementById("Apply")
      var request = document.getElementById("Request")
      var download = document.getElementById("Download")

      function startAnimation() {
         flowchart.classList.add("flow-chart-path");
         login.classList.add("fade-in-flowchart")
         apply.classList.add("fade-in-flowchart")
         request.classList.add("fade-in-flowchart")
         download.classList.add("fade-in-flowchart")
      }

      window.addEventListener('scroll', function(e) {
        scroll_position = window.scrollY;
        if (scroll_position > section_position) {
          startAnimation()
        }
      });

</script>

