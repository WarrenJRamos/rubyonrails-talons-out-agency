<p id="notice"><%= notice %></p>

<header>
  <h1><a href="home/index"><img src=<%=asset_path('TalonAgencyLogo.png')%> width="50" height="50" class="d-inline-block align-top" alt=""></a>
    Services</h1></header>

<!-- https://getbootstrap.com/docs/5.0/content/tables/ -->
<main>
<table class="table table-striped table-primary">
  <thead>
    <tr>
      <th scope="col">Service Type</th>
      <th scope="col">Description</th>
      <th scope="col">Price</th>
      <th scope="col" colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= service.service_type %></td>
        <td><%= service.description %></td>
        <td><%= service.price %></td>
        <td><%= link_to 'Show', service %></td>
        <td><%= link_to 'Edit', edit_service_path(service) %></td>
        <td><%= link_to 'Destroy', service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</main>

<%= link_to 'New Service', new_service_path, class:"btn btn-primary" %>
