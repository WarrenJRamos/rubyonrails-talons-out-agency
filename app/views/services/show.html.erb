<p id="notice"><%= notice %></p>

<div class="jumbotron bg-light">
  <br />
  
  <header>
  <h1 class="service-info display-4">
      <strong>Service type:</strong>
      <%= @service.service_type %>
  </h1>
  </header>

  <main>
  <p class="service-info lead">
    <strong>Description:</strong>
    <%= @service.description %> |
    <strong>Price:</strong>
    <%= @service.price %>
    <hr />
  </p>
</main>

  <p class="service-info my-4">
    <%= link_to 'Edit', edit_service_path(@service), class:"misc-button" %> |
    <%= link_to 'Back', services_path, class:"misc-button" %>
  </p>
  <br />
</div>


