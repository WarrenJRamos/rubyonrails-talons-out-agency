<p id="notice"><%= notice %></p>

<h1>Requests</h1>

<table>
  <thead>
    <tr>
      <th>Client name</th>
      <th>First name</th>
      <th>Middle name</th>
      <th>Last name</th>
      <th>Maiden name</th>
      <th>Dob</th>
      <th>Ssn</th>
      <th>Dl num</th>
      <th>Dl state</th>
      <th>Notes</th>
      <th>User</th>
      <th>Client</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.client_name %></td>
        <td><%= request.first_name %></td>
        <td><%= request.middle_name %></td>
        <td><%= request.last_name %></td>
        <td><%= request.maiden_name %></td>
        <td><%= request.dob %></td>
        <td><%= request.ssn %></td>
        <td><%= request.dl_num %></td>
        <td><%= request.dl_state %></td>
        <td><%= request.notes %></td>
        <td><%= request.user_id %></td>
        <td><%= request.client_id %></td>
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

