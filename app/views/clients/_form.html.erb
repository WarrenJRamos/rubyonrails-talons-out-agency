  <main>

    <div class="row">
      <div class="col-md-3 mb-3">
        <%= form.label :client_name, class:"form-label" %>
        <%= form.text_field :client_name, type: 'text', class: 'form-control', placeholder:"e.g. Jesse, Xiasong, Edgar"%>
      </div>
      <div class="col-md-3 mb-3">
        <%= form.label :email, class:"form-label" %>
        <%= form.text_field :email, type: 'text', class: 'form-control', placeholder:"e.g. example@website.com"%>
      </div>
      <div class="col-md-3 mb-3">
        <%= form.label :company, class:"form-label" %>
        <%= form.text_field :company, type: 'text', class: 'form-control', placeholder:"e.g. Herbie's Used Cars"%>
      </div>
    </div>

    <div class="row">
      <div class="col-md-3 mb-3">
        <%= form.label :phone, class:"form-label" %>
        <%= form.text_field :phone, type: 'text', class: 'form-control', placeholder:"e.g. 722-755-1234"%>
      </div>
      <div class="col-md-3 mb-3">
        <%= form.label :fax, class:"form-label" %>
        <%= form.text_field :fax, type: 'text', class: 'form-control', placeholder:"e.g. 504-987-1235"%>
      </div>
    </div>

    <div class="row">
      <div class="col-md-3 mb-3">
        <%= form.label :address, class:"form-label" %>
        <%= form.text_field :address, type: 'text', class: 'form-control', placeholder:"e.g. 4629 Rosedale Dr."%>
      </div>
      <div class="col-md-3 mb-3">
        <%= form.label :city, class:"form-label" %>
        <%= form.text_field :city, type: 'text', class: 'form-control', placeholder:"e.g. Denver"%>
      </div>
      <div class="col-md-1 mb-3">
        <%= form.label :state, class:"form-label" %>
        <%= form.text_field :state, type: 'text', class: 'form-control', placeholder:"CO"%>
      </div>
      <div class="col-md-2 mb-3">
        <%= form.label :zip, class:"form-label" %>
        <%= form.text_field :zip, type: 'text', class: 'form-control', placeholder:"e.g. 80231"%>
      </div>
    </div>

<!--    <div class="row">-->
<!--      <div class="col-md-1 mb-3" style="white-space: nowrap">-->
