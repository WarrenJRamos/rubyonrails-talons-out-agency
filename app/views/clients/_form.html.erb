        <%#= form.label :total_requests, class:"form-label" %>
        <%#= form.number_field :total_requests, class: 'form-control' %>
<!--      </div>-->
<!--    </div>-->


    <div class="row">
      <div class="col-md-8 mb-3">
        <%= form.label :notes, class:"form-label" %>
        <%= form.text_field :notes, class: 'form-control', placeholder:"e.g. Provide any important information." %>
      </div>
    </div>

    <h4 class="mb-3">Administrator: Check mark the Activate box to enable Client Requests.</h4>
    <div class="col-md-4 mb-3">
      <%= form.check_box :status %>
      <%= form.label :activate, class:"form-label" %>
    </div>

    <hr class="mb-3">

  </main>
  </body>
