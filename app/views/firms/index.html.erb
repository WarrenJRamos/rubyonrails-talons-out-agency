<p id="notice"><%= notice %></p>

<div class="header">
  <h1><a href="/"><img src=<%=asset_path('TalonAgencyLogo.png')%> width="45" height="41" class="d-inline-block align-top" alt=""></a>
    Requests</h1>
</div>

<main>
  <table class="table">
    <thead>
      <tr>
        <th>Invoice Data</th>
        <th>First Name</th>
        <th>Middle Name</th>
        <th>Last Name</th>
        <th>Maiden Name</th>
        <th>DOB</th>
        <th>SSN</th>
        <th>DL State</th>
        <th>DL Number</th>
        <th>Notes</th>
  <!--      <th>Client Request</th>-->
        <th>Services Requested</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @firms.each do |firm| %>
        <tr>
          <td style="padding: 10px; font-size: 12px; white-space: nowrap">
            <%= link_to firm do %>
            View Invoice: <%= firm.id %><br>
            <% end %>
            <%=firm.created_at.strftime("%-m/%d/%y %-I:%M ET")%><br>
            Updated: <%=time_ago_in_words(firm.updated_at)%> ago</td>
          <td><%= firm.first_name %></td>
          <td><%= firm.middle_name %></td>
          <td><%= firm.last_name %></td>
          <td><%= firm.maiden_name %></td>
          <td style="white-space: nowrap"><%= firm.dob %></td>
          <td style="white-space: nowrap"><%= firm.ssn %></td>
          <td><%= firm.dl_state %></td>
          <td><%= firm.dl_number %></td>
          <td><%= firm.notes %></td>
  <!--        <td><%#= firm.client_request %></td>-->
          <td style="padding: 10px; font-size: 13px"><% firm.services.each do |service| %>
              <li><%= service.service_type %></li>
            <% end %></td>
          <td><%= link_to 'Show', firm, style: "color: #457B9D; text-decoration: none" %></td>
          <td><%= link_to 'Edit', edit_firm_path(firm), style: "color: #457B9D; text-decoration: none; font-family: Arial, Helvetica, sans-serif" %></td>
          <td><%= link_to 'Destroy', firm, style: "color: #E63746; text-decoration: none; font-family: Arial, Helvetica, sans-serif", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</main>

<%= link_to 'New Request', new_firm_path, class:"bottom-button" %>
